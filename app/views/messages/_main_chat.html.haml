.chat-main
  .main-header
    .left-header 
      .main-header__left__box
        %h2.left-header_title a
        %ul.main-header__left-box__member-list Member : Iseya Shota
    = link_to "#",class:"edit--btn" do
      .main-header__edit-btn Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker Iseya Shota
        %p.message__upper-info__date 2019/12/22(Sun) 12:33:00
      %p.message__text よろしくです
  .form
    %form.new_message
      .input-box
        %input(placeholder = "type a message" class = "input-box__text" type = "text" name = "message[content]" id = "message_content" )
        %label(class = "input-box__image" for="message_image")
          = icon('fas', 'image')
          %input(class = "input-box__image__file" type = "file" name = "message[image]" id = "message_image")
      %input(type = "submit" name = "commit" value = "Send" class = "submit-btn" data-daisable-with = "Send")
