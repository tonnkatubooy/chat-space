.chat-main
  .main-header
    .main-header__left__box
      %h2.main-header__left-box__title 
        =@group.name
      .main-header__left-box__member-list 
        %p Member : 
        - @group.users.each do |user|
          = user.name
    .right-header
      =link_to "Edit", edit_group_path(@group),class: 'edit'
  .messages
    = render @messages
    .message
      .message__upper-info
        %p.message__upper-info__talker 
        %p.message__upper-info__date 
      %p.message__text 
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__text"
        =f.label :message_image, class: "input-box__image" do
          = icon 'fas', 'image'
          = f.file_field :image, class: "input-box__image__file"
      = f.submit 'Send', class: 'form__submit'

