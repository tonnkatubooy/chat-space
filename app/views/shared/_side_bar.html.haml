.chat-side
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__menu
        %ul.header__lists
          %li.list__edit
            = link_to new_group_path,class:"icon-color" do
              = icon('fas','edit')
          %li.list__cog
            = link_to edit_user_path(current_user),class:"icon-color" do
              = icon('fas','cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_path(group) do
          .group__name 
            = group.name 
          .group__message 
            = group.show_last_message